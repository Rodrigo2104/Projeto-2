                android:paddingRight="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="614dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text='Gostaria que se sentasse nesta cadeira com suas costas e braços apoiados. Quando eu disser "vá", por favor, fique em pé e ande novamente a marca no chão (+/- 3 m de distância), depois volte para a cadeira e sente-se novamente. '
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/checkBox48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView7"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="10-20 seg" />

                <CheckBox
                    android:id="@+id/checkBox49"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView7"
                    android:layout_alignTop="@+id/checkBox48"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:text="0-10 seg" />

