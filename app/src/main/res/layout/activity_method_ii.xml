                    android:layout_marginStart="0dp"
                    android:layout_marginTop="5dp" />

                <CheckBox
                    android:id="@+id/checkBox32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/checkBox31"
                    android:layout_alignStart="@+id/checkBox31"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="8dp" />

                <CheckBox
                    android:id="@+id/checkBox36"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/checkBox32"
                    android:layout_alignStart="@+id/checkBox32"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="7dp" />

                <CheckBox
                    android:id="@+id/checkBox37"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView31"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="-5dp"
                    android:layout_toEndOf="@+id/textView31" />

                <CheckBox
                    android:id="@+id/checkBox38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/checkBox37"
                    android:layout_alignStart="@+id/checkBox37"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="5dp" />

                <CheckBox
                    android:id="@+id/checkBox39"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/checkBox38"
                    android:layout_alignStart="@+id/checkBox38"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="7dp" />

                <CheckBox
                    android:id="@+id/checkBox40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/checkBox39"
                    android:layout_alignStart="@+id/checkBox39"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="8dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeLayout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="564dp"
                    android:layout_height="62dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Quando você necessita de ajuda, pode contar com alguém que esteja disponível e apto para atender as suas necessidades?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/checkBox41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="Às vezes" />

                <CheckBox
                    android:id="@+id/checkBox42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView5"
                    android:layout_alignTop="@+id/checkBox41"
                    android:layout_marginTop="0dp"
                    android:text="Sempre" />

                <CheckBox
                    android:id="@+id/checkBox43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/checkBox41"
                    android:layout_alignEnd="@+id/textView5"
                    android:layout_marginTop="-1dp"
                    android:text="Nunca" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeLayout6"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="283dp"
                    android:layout_height="65dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="Usa cinco ou mais medicamentos diferentes regularmente, por prescrição médica?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="284dp"
                    android:layout_height="75dp"
                    android:layout_below="@+id/textView6"
                    android:layout_alignStart="@+id/textView6"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="0dp"
                    android:text="Às vezes, esquece-se de tomar seus medicamentos prescritos pelo médico?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/checkBox44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/textView6" />

                <CheckBox
                    android:id="@+id/checkBox45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/checkBox44"
                    android:layout_alignTop="@+id/textView33"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="262dp"
                    android:layout_height="71dp"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="-3dp"
                    android:layout_toEndOf="@+id/checkBox44"
                    android:text="Recentemente perdeu peso, de forma que suas roupas tenham ficado mais largas?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="263dp"
                    android:layout_height="57dp"
                    android:layout_below="@+id/textView34"
                    android:layout_alignStart="@+id/textView34"
                    android:layout_marginStart="-2dp"
                    android:layout_marginTop="20dp"
                    android:text="Tem se sentido triste ou deprimido com frequência?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/checkBox46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView34"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="21dp"
                    android:layout_toEndOf="@+id/textView34" />

