<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/HeadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="EDMONTON FRAILESCALE "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/RelativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="17dp"
                    android:text='Por favor, imagine que este círculo é um relógio. Eu gostaria que você colocasse os números nas posições corretas e que depois incluísse os ponteiros de forma a indicar "onze horas e dez minutos".'
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/checkBox7"
                    android:layout_width="167dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:text="Pequenos erros de espaçamento" />

                <CheckBox
                    android:id="@+id/checkBox9"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView1"
                    android:layout_alignTop="@+id/checkBox7"
                    android:layout_marginTop="0dp"
                    android:text="Sem erros" />

                <CheckBox
                    android:id="@+id/checkBox22"
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/checkBox7"
                    android:layout_alignEnd="@+id/textView1"
                    android:layout_marginTop="0dp"
                    android:text="Outros erros" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/RelativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="504dp"
                    android:layout_height="37dp"
                    android:layout_centerHorizontal="true"
                    android:text='Nos últimos 12 meses, quantas vezes você foi internado (a)?'
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/checkBox30"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="19dp"
                    android:text="1 ou 2" />

                <CheckBox
                    android:id="@+id/checkBox23"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/checkBox30"
                    android:layout_alignEnd="@+id/textView2"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:text="Mais do que 2" />

                <CheckBox
                    android:id="@+id/checkBox24"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_alignTop="@+id/checkBox30"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:text="0" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="De modo geral, como você descreveria sua saúde?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/checkBoxz"
                    android:layout_width="101dp"
