                    android:layout_below="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp"
                    android:text="Razoável" />

                <CheckBox
                    android:id="@+id/checkBoxk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/checkBoxz"
                    android:layout_alignEnd="@+id/textView3"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="-64dp"
                    android:text="Ruim" />

                <CheckBox
                    android:id="@+id/checkBoxi"
                    android:layout_width="136dp"
                    android:layout_height="46dp"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_alignTop="@+id/checkBoxz"
                    android:layout_marginStart="-40dp"
                    android:layout_marginTop="-5dp"
                    android:text="Excelente Muito boa Boa " />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="396dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text='Tem problema em manter o controle da urina?'
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/checkBox51"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView8"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/textView8" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
