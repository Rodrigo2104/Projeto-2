<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MethodIIIActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/teste_X"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escala de Resiliência Wagnild and Young, traduzida Pesce et. Al"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/a113"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="@string/instrucoes_teste_X"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            android:textSize="15sp" />



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:gravity="center">

            <!--Cabeçalho-->

            <TextView
                android:id="@+id/palavra_principal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="10sp"
                android:text="Palavra Principal"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/palavra_associacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="10sp"
                android:text="Palavras de Associação"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_columnSpan="0"/>

            <TextView android:id="@+id/a01"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="1. OSTEOPOROSE"
                android:textColor="@color/black"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="10sp"
                android:textSize="15sp"/>
            <TextView android:id="@+id/a11"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="OSSO"
                android:textColor="@color/black"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="10sp"
                android:textSize="15sp"/>
            <TextView android:id="@+id/a21"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="músculo"
                android:textColor="@color/black"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_margin="10sp"
                android:textSize="15sp"/>
            <TextView android:id="@+id/a02"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="2. PAPANICOLAOU"
                android:textColor="@color/black"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_margin="10sp"
                android:textSize="15sp"/>

        </GridLayout>
    </ScrollView>
</LinearLayout>