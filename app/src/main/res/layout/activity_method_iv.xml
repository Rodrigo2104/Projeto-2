<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Methods.MethodIVActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escala de Katz"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:columnCount="4"
            android:rowCount="8"
            android:gravity="center">

            <!--Cabeçalho-->

            <TextView
                android:id="@+id/dep_indep"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_margin="10sp"
                android:layout_gravity="center"
                android:text="(1 ou 0)"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/independencia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="10sp"
                android:text="INDEPENDÊNCIA \n(1 ponto) \nSEM supervisão, orientação ou assistência técnica"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/dependencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="10sp"
                android:gravity="center"
                android:text="DEPENDÊNCIA \n(0 ponto) \nCOM supervisão, \norientação ou assistência pessoal \nou cuidado integral"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <!--Checkbox-->
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="3"
                android:text="Banhar-se"
                android:textSize="15sp"
                android:layout_margin="10sp"/>

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="3"
                android:text="Vestir-se"
                android:textSize="15sp"
                android:layout_margin="10sp"/>

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="3"
                android:text="Ir ao Banheiro"
                android:textSize="15sp"
                android:layout_margin="10sp"/>

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="3"
                android:text="Transferência"
                android:textSize="15sp"
                android:layout_margin="10sp"/>

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="3"
                android:text="Continência"
                android:textSize="15sp"
                android:layout_margin="10sp"/>

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="3"
                android:text="Alimentação"
                android:textSize="15sp"
                android:layout_margin="10sp"/>
        </GridLayout>
    </ScrollView>
</LinearLayout>